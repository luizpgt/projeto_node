<div>
  <h1>Encontre emprego dos seus sonhos</h1>
  <p>Bla bla bla</p>
  <form id="search-form" action="/" method="GET">
    <div>
      <input type="text" id="job" name="job" placeholder="digite a vaga que esta buscando">
    </div>
    <div>
      <button type="submit">procurar</button>
    </div>
  </form>
</div>

<main>
  <div>
    <div>
      {{#if search}}
      <h2 id="job-list-title">buscando vagas que contem: {{search}}</h2>
      {{else}}
      <h2 id="job-list-title">veja nossas vagas em destaque</h2>
      {{/if}}
      <ul>
        {{#each jobs}}
        <li>
          <img src="img/company.svg" alt="">
          <p>{{dataValues.company}}</p>
          <h2>{{dataValues.title}}</h2>
          <p>R${{dataValues.salary}}</p>
          {{#if dataValues.new_job }}<span class="new-job">nova!</span>{{/if}}
          <a href="/jobs/view/{{dataValues.id}}">ver vaga</a>
        </li>
          {{/each}}
      </ul>
    </div>
  </div>
</main>
